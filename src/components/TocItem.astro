---
const { item, index } = Astro.props;
---

<li>
  <div class="flex items-center">
    {item.children.length > 0 && (
      <button class="js-toc-toggle mr-2 text-muted-foreground" data-index={index}>
        <svg class="w-4 h-4 transition-transform duration-200" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
    )}
    <a href={`#${item.slug}`} class="js-toc-link text-xs text-muted-foreground hover:text-foreground transition-colors duration-200">
      {item.text}
    </a>
  </div>
  {item.children.length > 0 && (
    <ul class="ml-6 mt-2 space-y-2 hidden js-toc-submenu" data-index={index}>
      {item.children.map((child, childIndex) => (
        <Astro.self item={child} index={`${index}-${childIndex}`} />
      ))}
    </ul>
  )}
</li>
