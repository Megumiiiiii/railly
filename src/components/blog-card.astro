---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"guides">;
}

const { post } = Astro.props as Props;
---

<div class="border p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow">
  <a href={`/guides/${post.slug}`} class="text-xl font-medium"
    >{post.data.title}</a
  >
  <p class="text-muted-foreground mt-2">{post.data.excerpt}</p>
  <a
    href={`/guides/${post.slug}`}
    class="text-accent-foreground font-bold mt-4 inline-block">Read more â†’</a
  >
</div>
