---
import Header from "@/components/header-landing.astro";
import CurrentWork from "@/components/CurrentWork.astro";
import Projects from "@/components/Projects.astro";
import Explore from "@/components/Explore.astro";
import MainLayout from "@/layouts/main-layout.astro";
import { BUILDING_PROJECTS, OPEN_SOURCE_PROJECTS } from "@/data/home";
---

<MainLayout
  title="Railly Hugo"
  description="Software Engineer. Building developer tools and open source projects."
  author="Railly Hugo"
  image="/images/og.png"
>
  <div class="[grid-column:2]">
    <Header />
    <CurrentWork />
    <section class="mt-8 max-w-screen overflow-x-auto">
      <div class="grid grid-cols-3 gap-6 w-[600px] md:w-full">
        <Projects sectionTitle="Building" projects={BUILDING_PROJECTS} />
        <Projects sectionTitle="Open Source" projects={OPEN_SOURCE_PROJECTS} />
        <Explore />
      </div>
    </section>
  </div>
</MainLayout>
