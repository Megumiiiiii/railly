---
import Header from "@/components/header-landing.astro";
import CurrentWork from "@/components/CurrentWork.astro";
import Projects from "@/components/Projects.astro";
import Explore from "@/components/Explore.astro";
import MainLayout from "@/layouts/main-layout.astro";
import { BUILDING_PROJECTS, OPEN_SOURCE_PROJECTS } from "@/data/home";
---

<MainLayout
  title="ZeroDrop DAO"
  description="Your go-to source for the latest in crypto airdrops, testnet, retroactive rewards, and hidden blockchain gems. Stay ahead in Web3. "
  author="ZeroDrop"
  image="/images/og.png"
>
  <div class="[grid-column:2]">
    <Header />
    <CurrentWork />
    <section class="mt-8 max-w-screen overflow-x-auto">
      <div class="grid grid-cols-3 gap-6 w-[600px] md:w-full">
        <Projects sectionTitle="Intro" projects={BUILDING_PROJECTS} />
        <Projects sectionTitle=" " projects={OPEN_SOURCE_PROJECTS} />
        <Explore />
      </div>
    </section>
  </div>
</MainLayout>
